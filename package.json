{
  "name": "mobile-examiner-alpha",
  "version": "0.0.1",
  "description": "DVSA Mobile Examiner Services (GDS Alpha phase)",
  "author": "DVSA",
  "homepage": "https://github.com/dvsa/mobile-examiner-alpha",
  "private": true,
  "scripts": {
    "clean": "ionic-app-scripts clean",
    "build": "ionic-app-scripts build",
    "lint": "ionic-app-scripts lint",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "ionic:deploy": "git push ionic master",
    "format:fix": "pretty-quick --staged",
    "precommit": "run-s format:fix lint",
    "prepush": "run-p gitSecrets scanRepo test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "gitSecrets": "git secrets --scan",
    "scanRepo": "git log -p -n 15 | scanrepo"
  },
  "dependencies": {
    "@angular/common": "5.0.3",
    "@angular/compiler": "5.0.3",
    "@angular/compiler-cli": "5.0.3",
    "@angular/core": "5.0.3",
    "@angular/forms": "5.0.3",
    "@angular/http": "^5.0.3",
    "@angular/platform-browser": "5.0.3",
    "@angular/platform-browser-dynamic": "5.0.3",
    "@ionic-native/core": "4.4.0",
    "@ionic-native/http": "^4.6.0",
    "@ionic-native/splash-screen": "4.4.0",
    "@ionic-native/status-bar": "4.4.0",
    "@ionic/storage": "2.1.3",
    "angular2-signaturepad": "^2.8.0",
    "cordova-ios": "^4.5.4",
    "cordova-plugin-device": "^2.0.1",
    "cordova-plugin-ionic": "^4.1.0",
    "cordova-plugin-ionic-keyboard": "^2.0.5",
    "cordova-plugin-ionic-webview": "^1.1.16",
    "cordova-plugin-screen-orientation": "~3.0.1",
    "cordova-plugin-splashscreen": "^5.0.2",
    "cordova-plugin-statusbar": "^2.4.1",
    "cordova-plugin-whitelist": "^1.3.3",
    "govuk_frontend_toolkit": "^7.4.2",
    "ionic-angular": "3.9.2",
    "ionicons": "3.0.0",
    "rxjs": "5.5.2",
    "sw-toolbox": "3.6.0",
    "zone.js": "0.8.18",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@ionic/app-scripts": "3.1.8",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.106",
    "dotenv-safe": "^5.0.1",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-preset-angular": "^5.2.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "2.4.2"
  },
  "config": {
    "ionic_webpack": "./config/webpack.config.js"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-ionic": {
        "APP_ID": "2833cf7c",
        "CHANNEL_NAME": "Production",
        "UPDATE_METHOD": "background",
        "WARN_DEBUG": "true",
        "UPDATE_API": "https://api.ionicjs.com",
        "MAX_STORE": "2"
      },
      "cordova-plugin-whitelist": {},
      "cordova-plugin-device": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-ionic-webview": {},
      "cordova-plugin-ionic-keyboard": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-advanced-http": {},
      "cordova-plugin-screen-orientation": {},
      "cordova-plugin-insomnia": {}
    },
    "platforms": ["ios"]
  }
}
